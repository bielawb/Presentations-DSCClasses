<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SizeToContent="Height"
    Title="Service Stopper"
    Topmost="True">
    <Grid Margin="10,40,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Margin="10" TextAlignment="Center" FontFamily="Anonymous Pro for PowerLine" FontSize="100" TextWrapping="WrapWithOverflow" VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Direction="-45" Color="#FFB6C2CB" ShadowDepth="10" BlurRadius="14" />
            </TextBlock.Effect>
            Writing DSC class-based resources
        </TextBlock>
        <Image Grid.Column="0" Grid.RowSpan="2" Source="DSC-with-Class.png" />
        <TextBlock 
            Grid.Column="1" Grid.Row="1" 
            FontSize="30" FontFamily="Anonymous Pro for PowerLine Italic"
            TextAlignment="Center" Margin="30,30,30,30"
        >
        notes from the field - 2022 edition
        </TextBlock>
    </Grid>
</Window>
